<div class="p-2 bg-light">
    @{
        WordLength = 0;

        if(WordString.Length > 0 )
        {
            int i = WordString.Length - 1; 

            while(i >= 0 && WordString[i] == ' ')
            {
                i--;
            }

            while(i >= 0 && WordString[i] != ' ')
            {
                WordLength++;
                i--;
            }

        }
    }

        <div class="mt-3">
            <h3> The Last Word's Length is <span class="bg-info"> @WordLength </span></h3>
        </div>

</div>


@code {

    [Parameter]
    public string WordString { get; set; }

    [Parameter]
    public int WordLength { get; set; }
}
