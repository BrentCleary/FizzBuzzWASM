
<div class="row row-cols-1 row-cols-md-5">

    <div class="border border-2 rounded-2">Number of Words = @WordsInString(WordString)</div>

</div>

@code {
    [Parameter]
    public string WordString { get; set; } = "abcde";

    public int WordsInString(string WordString)
    {
        int result = 0;
        const char V = ' ';
        bool currentWord = false;

        if(WordString.Length == 0)
        {
            return result = 0;
        }

        for(int i = 0; i < WordString.Length; i++)
        {
            // if non-space, and bool is false, increase count and set bool to true
            if(WordString[i] != V && currentWord == false)
            {
                currentWord = true;
                result += 1;
            }

            // if space, set bool false, continue
            if (WordString[i] == V)
            {
                currentWord = false;
            }

        }

        return result;
    }

}
